<div class='ingredientall'>
  <!-- <div class='ingredientheading'>  --> 
  <h1>All Available Ingredients</h1>
</div>

<div class='ingredientbody'>
  <ul><% @ingredients.each do |ingredient| %></ul>

  <div class='ingredientheading2'>
    <h3>Ingredient Name : <%= ingredient.name %> </h3>
  </div>

  <div class='ingredientaction'>
    <%= link_to 'Show', ingredient %>
    <% if can? :update, @recipe %>&nbsp;
    <%= link_to 'Edit', edit_ingredient_path(ingredient) %>
    <% end %> &nbsp;
    <% if can? :destroy, @recipe %>
    <%= link_to 'Delete', ingredient_path(ingredient), method: :delete, confirm: 'Are you sure you would like to delete this ingredient?' %>
    <% end %>
  </div>


  <% end %>

  <br>

</div>
</div>