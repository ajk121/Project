<!DOCTYPE html>
<html>
<head>
  <title>Cookbook2</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <div class='wholebody'>

    <div class='cssmenu'>
      <nav>

        <div class='heading'>    
          <h1>Project Cookbook </h1>  
        </div> 

        <div class='useraction'>

          <% if current_user %> 
          <%= link_to 'logout!', logout_path %>
          <% else %>
          <%= link_to 'Register', new_user_path %>
          &nbsp;&nbsp;
          <%= link_to 'login', new_session_path %>
          &nbsp;&nbsp;
          <% end %>
          <br>
          
        </div>

        <div class='linksbox'>  
          <ul class='links'>
            <li><%= link_to 'Home', root_path %></li>
            <li><%= link_to 'All Recipes', recipes_path %></li>
            <li><%= link_to 'Add Recipe', new_recipe_path %></li>
            <li><%= link_to 'All Categories', categories_path %></li>
            <li><%= link_to 'Add Category', new_category_path %></li>
            <li><%= link_to 'All Ingredients', ingredients_path %></li>
            <li><%= link_to 'Add Ingredient', new_ingredient_path %></li> 
            <br>
          </ul>
        </div>


      </nav>
    </div>




    <div class='yield'>
      <%= yield %>

      <div class='footer'>   
       <% flash.each do |name, msg| %>
       <div class="flash-message flash-message-<%= name %>">
         <div class='message'><%= msg %></div>
       </div>
       <% end %>
       
       <% if current_user %>
       <p>hello <%= current_user.email %></p>
       <% end %>
     </div>
   </div>




   <br>

   <!-- <div class='footer'>   
    <% flash.each do |name, msg| %>
      <div class="flash-message flash-message-<%= name %>">
      <%= msg %>
      </div>
    <% end %>
    
    <% if current_user %>
      <p>Hello <%= current_user.email %></p>
    <% end %>
  </div> -->


</div>

</body>
</html>
